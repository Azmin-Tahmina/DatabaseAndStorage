<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CameraApp.ClientEdit"
             Title="Edit Client">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Full Name:" x:Name="name"/>
                    <EntryCell Label="Address:" x:Name="address"/>
                    <EntryCell Label="Phone:" x:Name="phone"/>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="Photo"/>
                            <Image x:Name="img" HeightRequest="200"
                                   WidthRequest="200"/>
                            <Button Text="Take New Photo" Clicked="takePhoto"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button x:Name="button1"/>
    </VerticalStackLayout>
</ContentPage>